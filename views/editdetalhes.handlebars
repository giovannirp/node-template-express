<h1>Detalhes edição</h1>

<form action="/detalhes/updatelista" method="post">
  <input type="hidden" name="id" value={{listaDetalhes.id}} />
  <div class="form-group mb-3 mt-3">
    <label for="produto" class="pb-2">Nome</label>
    <input
      type="text"
      id="produto"
      name="produto"
      value="{{listaDetalhes.produto}}"
      class="form-control"
    />
  </div>

   <div class="form-group mb-3">
    <label for="preco" class="pb-2">Preço</label>
    <input 
      type="text"
      id="preco"
      name="preco"
      value="{{listaDetalhes.preco}}"
      class="form-control" 
    />
  </div>
  <div class="form-group mb-3">
    <label for="descricao" class="pb-2">Descrição</label>
    <input 
      type="text"
      id="descricao"
      name="descricao"
      value="{{listaDetalhes.descricao}}"
      class="form-control" 
    />
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-info">Alterar</button>
  </div>
</form>
